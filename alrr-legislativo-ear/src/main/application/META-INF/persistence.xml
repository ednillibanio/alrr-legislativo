<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">


	<persistence-unit
		name="alrr-legislativo-persistence-ear">
		<!-- DATA SOURCE -->
		<jta-data-source>java:jboss/datasources/alrr-sistemas-ds</jta-data-source>

		<!-- ENTIDADES DO MODULO LOCALIDADE-JPA -->
		<!-- <class>br.leg.rr.al.localidade.jpa.Bairro</class> <class>br.leg.rr.al.localidade.jpa.Cep</class> 
			<class>br.leg.rr.al.localidade.jpa.Municipio</class> <class>br.leg.rr.al.localidade.jpa.Pais</class> 
			<class>br.leg.rr.al.localidade.jpa.UnidadeFederativa</class> -->

		<!-- ENTIDADES DO MODULO COMMONS-JPA -->
		<!-- <class>br.leg.rr.al.commons.jpa.Feriado</class> <class>br.leg.rr.al.commons.jpa.Gabinete</class> 
			<class>br.leg.rr.al.commons.jpa.Profissao</class> <class>br.leg.rr.al.commons.jpa.Telefone</class> -->

		<class>br.leg.rr.al.legislativo.entity.Legislatura</class>
		<class>br.leg.rr.al.legislativo.mesa.entity.MesaDiretora</class>
		<class>br.leg.rr.al.legislativo.mesa.entity.MembroMesaDiretora</class>

		<class>br.leg.rr.al.core.jpa.BaseEntity</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<validation-mode>AUTO</validation-mode>


		<properties>
			<property name="wildfly.jpa.default-unit" value="true" />

			<property name="hibernate.default_schema"
				value="legislativo_schema" />

			<!-- Defines if the persistence provider shall also create the required 
				database schemas or only the other database objects like tables, sequences, 
				etc.. -->
			<!-- <property name="javax.persistence.schema-generation.create-database-schemas" 
				value="true" /> -->


			<!-- Defines which scripts the persistence provider shall create. -->
			<!-- <property name="javax.persistence.schema-generation.database.action" 
				value="create" /> -->

			<!-- Defines how the schema shall be dropped. It can be done based on 
				the mapping metadata, a script or a combination of both. -->
			<!-- <property name="javax.persistence.schema-generation.create-source" 
				value="metadata-then-script" /> -->

			<!-- <property name="javax.persistence.schema-generation.create-script-source" 
				value="sql/create-localidade-views.sql" /> -->

			<!-- Defines which scripts the persistence provider shall create. A script 
				target needs to be defined for each script to be created. -->
			<!-- <property name="javax.persistence.schema-generation.scripts.action" 
				value="drop-and-create" /> -->

			<!-- Defines the target location of the create script generated by the 
				persistence provider. -->
			<!-- <property name="javax.persistence.schema-generation.scripts.create-target" 
				value="sql/create.sql" /> -->

			<!-- Defines the target location of the drop script generated by the persistence 
				provider. -->
			<!-- <property name="javax.persistence.schema-generation.scripts.drop-target" 
				value="sql/drop.sql" /> -->




			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.connection.useUnicode"
				value="true" />
			<property name="hibernate.connection.characterEncoding"
				value="UTF-8" />
			<property name="log4j.logger.org.hibernate.SQL"
				value="debug" />
			<property name="log4j.logger.org.hibernate.type"
				value="info" />
			<property name="log4j.logger.org.hibernate.transaction"
				value="debug" />

			<property name="hibernate.search.default.directory_provider"
				value="filesystem" />
			<property name="hibernate.search.default.indexBase"
				value="./lucene/indexes" />
			<!-- <property name="hibernate.search.analyzer" value="br.leg.rr.al.core.jpa.EntityAnalyzer" 
				/> -->
			<!-- CONFIGURAÇÃO DE AUDITORIA. SERÁ USADO PARA A ENTIDADE ATENDIMENTO -->

		</properties>
	</persistence-unit>
</persistence>
